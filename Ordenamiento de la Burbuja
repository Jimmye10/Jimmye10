# Obtener la longitud del array
    n = len(arr)
 
      # Recorrer todos los elementos de la matriz
    for i in range(n - 1):
       # Los Ãºltimos elementos i ya estÃ¡n en su lugar
        for j in range(0, n - i - 1):
            # Recorrer la matriz de 0 a n-i-1
            # Intercambiar si el elemento encontrado es mayor que el siguiente elemento
            if arr[j] > arr[j + 1]:
                arr[j], arr[j + 1] = arr[j + 1], arr[j]
